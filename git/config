# Main git config file

[user]
	name = Tim Allclair
	email = timallclair@gmail.com
	signingkey = 0x5E6F2E2DA760AF51

[core]
	editor = emacs -nw -q --load "$HOME/tconf/emacs/min-init.el"

[init]
	templatedir = ~/.git-templates

[color]
	ui = true

[advice]
	statusHints = false

[alias]
	amend = commit --amend --no-edit
	b = branch
	co = checkout
	current-branch = rev-parse --abbrev-ref HEAD
	ediff = difftool -y --tool=ediff
	last = log -n 1
	mb = !git merge-base master $(git rev-parse --abbrev-ref HEAD)
	pop = stash pop
	s = status
	sb = status -sb
	start = !git fetch upstream && git checkout -b $1 upstream/master && :
	stashq = -c commit.gpgsign=false stash

[diff]
	renames = copies

[difftool "ediff"]
	cmd = emacs -nw -q --load "$HOME/tconf/emacs/min-init.el" --eval "(ediff-files \"$LOCAL\" \"$REMOTE\")"

[difftool "ediffclient"]
	cmd = emacsclient --eval "(ediff-files \"$LOCAL\" \"$REMOTE\")"

[commit]
  #	gpgsign = true

[checkout]
	defaultRemote=upstream

[push]
	default = current
	autoSetupRemote = true

[remote]
	pushDefault = origin

[http]
	followRedirects = true
	cookiefile = $HOME/.gitcookies

[rerere]
	enabled = true
