! Color scheme based on Google Material Design guidelines
! http://www.google.com/design/spec/material-design

!! Standard Colors

#define black            #000000
#define bt_black         #212121
#define white            #fafafa
#define bt_white         #ffffff
#define lt_gray          #e0e0e0

!! 500 color range
#define red              #e51c23
#define green            #259b24
#define yellow           #ffeb3b
#define amber            #ffc107
#define blue             #5677fc
#define orange           #ff9800
#define dp_orange        #ff5722
#define pink             #e91e63
#define purple           #9c27b0
#define cyan             #00bcd4

!! A400 color range
#define bt_red           #ff2d6f
#define bt_green         #14e715
#define bt_yellow        #ffea00
#define bt_amber         #ffc400
#define bt_dp_orange     #ff3d00
#define bt_blue          #00b0ff
#define bt_pink          #f50057
#define bt_purple        #d500f9
#define bt_cyan          #00e5ff


*background:              white
*foreground:              bt_black
*fading:                  20
*fadeColor:               white
*cursorColor:             cyan
