# Export bash variables

# Location of tconf configuration. Should be overwritten in local if different
# from default.
[ -z $TCONF ] && export TCONF=$HOME/tconf

export EDITOR='emacs -nw -q --load $TCONF/emacs/min-init.el'
export TERMINAL='urxvt'

export GITHUB_USER=tallclair

export PATH="$HOME/bin:$PATH"

# Go project directory
export GOPATH=$HOME/go
export PATH="$GOPATH/bin:$PATH"

# Python setup
export PATH="$HOME/.local/bin:$PATH"

# Add tconf bin paths
export PATH="$PATH:$TCONF/bin:$TCONF/git/bin:$TCONF/local/bin"

export STARSHIP_CONFIG="$TCONF/etc/starship.toml"

# Set REMOTE_ALIAS fallback
if [ -z "$REMOTE_ALIAS" ]; then
    if [ -n "$SSH_CLIENT" ] || [ -n "$SSH_CONNECTION" ] || { [ -z "$XDG_VTNR" ] && [ -z "$DISPLAY" ]; }; then
        export REMOTE_ALIAS="$(hostname)"
    fi
fi
